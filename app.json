{
  "expo": {
    "name": "nao-tome-multa",
    "slug": "nao-tome-multa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "naotomemulta",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "extra": {
      "ZAPAY_API_KEY": "SUA_CHAVE_REAL_DA_ZAPAY_AQUI"
    },

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "A câmera é utilizada para digitalizar autos de infração de trânsito.",
        "NSPhotoLibraryUsageDescription": "A galeria é utilizada para selecionar autos de infração armazenados no dispositivo.",
        "NSDocumentPickerUsageDescription": "Os arquivos são utilizados para análise técnica do auto de infração."
      }
    },

    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },

    "plugins": [
      "expo-router",
      "expo-image-picker",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-web-browser",
      "expo-secure-store"
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
